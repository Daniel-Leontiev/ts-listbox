{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "strict": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceRoot": "./",
    "outDir": "/build/",
    "baseUrl": ".",
    "paths": {
      "*": [
        "/src/*",
        "/packages/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src",
    "packages"
  ]
}